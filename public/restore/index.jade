doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    // Meta, title, CSS, favicons, etc.
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title
    // Bootstrap
    link(rel='stylesheet prefetch', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css')
    // Font Awesome
    link(rel='stylesheet prefetch', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.css')
    // NProgress
    link(rel='stylesheet prefetch', href='https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.css')
    // Animate.css
    link(rel='stylesheet prefetch', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css')
    // Custom Theme Style
    link(href='./style.css', rel='stylesheet')
  body.login
    div
      .login_wrapper
        #restore.animate.form.restore_form
          section.login_content
            form
              h1 {{ 'Forgot password' | translate }}
              p.text-left
                | {{ 'Please enter your email so we can send you a link to restore the access to your account.' | translate }}
              div
                input.form-control(type='email', placeholder='Email', required='')
              div
                a.btn.btn-theme.btn-block.btn-lg.submit(href='index.html') {{ 'Restore the access to your account' | translate }}
              .clearfix
              .separator
                .clearfix
                br