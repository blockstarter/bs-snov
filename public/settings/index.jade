                      a(href='/') {{ 'En' | translate }}
                li
                  a.user-profile.dropdown-toggle(href='', data-toggle='dropdown', aria-expanded='false')
                    span.fa.fa-angle-down
                  ul.dropdown-menu.dropdown-usermenu.pull-right
                    li
                      a(href='/profile')  {{ 'Profile' | translate }}
                    li
                      a(href='/setting') {{ 'Settings' | translate }}
                    li
                      a(href='/login')
                        i.fa.fa-sign-out.pull-right
                        |  {{ 'Log Out' | translate }}
                li.dropdown(role='presentation')
                  a.dropdown-toggle.info-number(href='javascript:;', data-toggle='dropdown', aria-expanded='false')
                    i.fa.fa-envelope-o
                    span.badge.bg-orange 6
