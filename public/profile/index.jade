doctype html
html(lang='en' ng:app="app" ng:controller="members")
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    // Meta, title, CSS, favicons, etc.
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title(ng:if="false") Loading...
    title(ng:if="true") {{ 'ICO snovio dashboard' | translate }} 
    include ../common-style
    // Custom ICO Style
    style 
      include ../style.css
  body.nav-md(ng:class="{visible: true}" ng:controller="profile")
    .full-container.body
      .main_container
        // top navigation
        .top_nav
          include ../members/nav-menu
        // /top navigation
        // page content
        .container(role='main')
          div
            .row
              .col-md-9.col-sm-9.col-xs-12
                .x_panel.counter
                  .x_title
                    h2 {{ 'User Profile' | translate }}
                    .clearfix
                  .x_content
                    #userinfo.animate.form.iserinfo_form
                      section
                        form.form-horizontal
                          .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='username') {{ 'Username' | translate }}
                            .col-md-6.col-sm-6.col-xs-12
                              input#username.form-control.col-md-7.col-xs-12(type='text', required='', placeholder='username' ng:model="form.username")
                          .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='email') {{ 'Email' | translate }}
                            .col-md-6.col-sm-6.col-xs-12
                              input#email.form-control.col-md-7.col-xs-12(type='email', required='', placeholder='email' ng:model="form.email")
                          .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='curpass') {{ 'Current password' | translate }}
                            .col-md-6.col-sm-6.col-xs-12
                              input#curpass.form-control.col-md-7.col-xs-12(type='password', required='required', placeholder='Current password' ng:model="form.oldPassword")
                          .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='newpass') {{ 'New password' | translate }}
                            .col-md-6.col-sm-6.col-xs-12
                              input#newpass.form-control.col-md-7.col-xs-12(type='password', required='required', placeholder='New password' ng:model="form.newPassword")
                          .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='confirmpass') {{ 'Confirm password' | translate }}
                            .col-md-6.col-sm-6.col-xs-12
                              input#confirmpass.form-control.col-md-7.col-xs-12(type='password', required='required', placeholder='Confirm password' ng:model="form.newPasswordRepeat")
                          .col-md-4.col-sm-4.col-md-offset-3.col-sm-offset-3.col-xs-12
                            a.btn.btn-theme.btn-lg.submit.btn-block(ng:click="save()") {{ 'Save changes' | translate }}
                          .clearfix
                    .clearfix
                include ../members/history
              include ../members/sidebar
        // /page content
        // footer content
        include ../members/footer.jade
        // /footer content
    include ../common.jade
    // Custom Theme Scripts
    script 
       //-include ../common.js
       include ../languages.js
       include ../proofofwork.js
       include ../members/logic.js
       include ./logic.js