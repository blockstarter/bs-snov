    // Custom ICO Style
    link(rel='stylesheet', href='../style.css')
  body.nav-md(ng:class="{visible: !model.loading}")
    .full-container.body
      .main_container
        // top navigation
        .top_nav
          .nav_menu
            nav
              .allert-box
                | {{ 'Thank you for registration. Please' | translate }} 
                a(href='#') {{ 'confirm your email' | translate }}
              a.navbar-brand.page-scroll(href='index.html')
                img.logo(src='https://snov.io/assets/img/logo-white.svg', alt='Snov.io')
              ul.nav.navbar-nav.navbar-right
                li.dropdown.language-picker
                  a.dropdown-toggle(href='', data-toggle='dropdown', role='button', aria-expanded='false')
                    | {{ 'En' | translate }}
                    span.fa.fa-angle-down
                  ul.dropdown-menu.pull-right
                    li
                      a(href='/ru/') {{ 'Ru' | translate }}
                    li.current
                      a(href='/') {{ 'En' | translate }}
                li
                  a.user-profile.dropdown-toggle(href='', data-toggle='dropdown', aria-expanded='false')
                    span.fa.fa-angle-down
                  ul.dropdown-menu.dropdown-usermenu.pull-right
                    li
                      a(href='/profile')  {{ 'Profile' | translate }}
                    li
                      a(href='/settings') {{ 'Settings' | translate }}
                    li
                      a(href='/login' ng:click="logout($event)")
                        i.fa.fa-sign-out.pull-right
                        |  {{ 'Log Out' | translate }}
                li.dropdown(role='presentation')
                  a.dropdown-toggle.info-number(href='javascript:;', data-toggle='dropdown', aria-expanded='false')
                    i.fa.fa-envelope-o
                    span.badge.bg-orange 6
                  ul#menu1.dropdown-menu.list-unstyled.msg_list(role='menu')
                    li
                      a
                        span.image
                          img(src='images/picture.jpg', alt='Profile Image')
                        span
                          span {{ 'John Smith' | translate }}
                          span.time {{ '3 mins ago' | translate }}
                        span.message
                          | {{ 'Film festivals used to be do-or-die moments for movie makers. They were where...' | translate }}
                    li
                      a
                        span.image
                          img(src='images/picture.jpg', alt='Profile Image')
                        span
                          span {{ 'John Smith' | translate }}
                          span.time {{ '3 mins ago' | translate }}
                        span.message
                          | {{ 'Film festivals used to be do-or-die moments for movie makers. They were where...' | translate }}
                    li
                      a
                        span.image
                          img(src='images/picture.jpg', alt='Profile Image')
                        span
                          span {{ 'John Smith' | translate }}
                          span.time {{ '3 mins ago' | translate }}
                        span.message
                          | {{ 'Film festivals used to be do-or-die moments for movie makers. They were where...' | translate }}
                    li
                      a
                        span.image
                          img(src='images/picture.jpg', alt='Profile Image')
                        span
                          span {{ 'John Smith' | translate }}
                          span.time {{ '3 mins ago' | translate }}
                        span.message
                          | {{ 'Film festivals used to be do-or-die moments for movie makers. They were where...' | translate }}
                    li
                      .text-center
                        a
                          strong {{ 'See All Alerts' | translate }}
                          i.fa.fa-angle-right
        // /top navigation
        // page content
        .container(role='main')
          div
            .row
              .col-md-9.col-sm-9.col-xs-12
                .x_panel.counter
                  .x_title
                    h2 {{ 'Crowdsale starts in' | translate }}
                    ul.nav.navbar-right.panel_toolbox
                      li
                        a.collapse-link
                          i.fa.fa-chevron-up
                      li
                        a.close-link
                          i.fa.fa-close
                    .clearfix
                  .x_content
                    .countdown.countdown-container.col-md-10.col-md-offset-1.col-xs-12(data-border-color='rgba(0, 0, 0, .8)')
                      .clock
                        .clock-item.clock-days.countdown-time-value.col-xs-3.col-sm-3.col-md-3
                          .wrap
                            .inner
                              #canvas-days.clock-canvas
                              .text
                                p.val {{model.timer.days}}
                                p.type-days.type-time {{ 'Days' | translate }}
                        .clock-item.clock-hours.countdown-time-value.col-xs-3.col-sm-3.col-md-3
                          .wrap
                            .inner
                              #canvas-hours.clock-canvas
                              .text
                                p.val {{model.timer.hours}}
                                p.type-hours.type-time {{ 'Hours' | translate }}
                        .clock-item.clock-minutes.countdown-time-value.col-xs-3.col-sm-3.col-md-3
                          .wrap
                            .inner
                              #canvas-minutes.clock-canvas
                              .text
                                p.val {{model.timer.minutes}}
                                p.type-minutes.type-time {{ 'Minutes' | translate }}
                        .clock-item.clock-seconds.countdown-time-value.col-xs-3.col-sm-3.col-md-3
                          .wrap
                            .inner
                              #canvas-seconds.clock-canvas
                              .text
                                p.val {{model.timer.seconds}}
                                p.type-seconds.type-time {{ 'Seconds' | translate }}
                    .clearfix
                .x_panel.saleprogress
                  .x_title
                    h2 {{ 'Tokensale progress' | translate }}
                    ul.nav.navbar-right.panel_toolbox
                      li
                        a.collapse-link
                          i.fa.fa-chevron-up
                      li
                        a.close-link
                          i.fa.fa-close
                    .clearfix
                  .x_content
                    .widget_summary
                      .w_left
                        strong 0
                      .w_center.w_100
                        .progress
                          .progress-bar.bg-purple(role='progressbar' aria-valuenow='{{model.progress.current.usd }}' aria-valuemin='0' aria-valuemax='{{model.progress.max }}' ng:style="{width: model.progress.current.percent}") {{model.progress.current.usd | currency}}
                        .text-right.softcap {{ 'Softcap' | translate }}
                      .w_right
                        strong  {{model.progress.max | currency }}
                .x_panel.status
                  .x_title
                    h2 {{ 'Tokensale status' | translate }}
                    ul.nav.navbar-right.panel_toolbox
                      li
                        a.collapse-link
                          i.fa.fa-chevron-up
                      li
                        a.close-link
                          i.fa.fa-close
                    .clearfix
                  .x_content
                    .tile_count
                      .col-md-4.col-sm-4.col-xs-12.text-center.tile_stats_count
                        .count
                          i.fa.fa-dollar.purple
                          | {{model.progress.current.usd | currency | remove_sign}} USD
                      .col-md-4.col-sm-4.col-xs-12.text-center.tile_stats_count
                        .count
                          i.fa.fa-diamond.purple
                          | {{model.progress.current.eth | currency | remove_sign}} ETH
                      .col-md-4.col-sm-4.col-xs-12.text-center.tile_stats_count
                        .count
                          i.fa.fa-user.purple
                          | {{model.progress.current.contributors}}
                    .clearfix
                    .currency.tile_count
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count(ng:repeat="row in model.rates")
                        span.count_top
                          img(src='{{row.img}}' alt='{{row.token}}')
                        .count {{row.change}}
                        span.count_bottom {{row.token}}
                    //-.currency.tile_count
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/co-dollar.svg', alt='USD')
                        .count 12,562,365
                        span.count_bottom USD
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/btc.jpg', alt='BTC')
                        .count 56.356
                        span.count_bottom BTC
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/ethereum.png', alt='', eth='')
                        .count 259,475,153
                        span.count_bottom ETH
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/dash.png', alt='DASH')
                        .count 1,652,256,356
                        span.count_bottom DASH
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/euro.png', alt='EUR')
                        .count 362,365
                        span.count_bottom EUR
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/litecoin.png', alt='LTC')
                        .count 362,365.256
                        span.count_bottom LTC
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/doge.png', alt='DOGE')
                        .count 9,475,153
                        span.count_bottom DOGE
                      .col-md-3.col-sm-3.col-xs-6.tile_stats_count
                        span.count_top
                          img(src='https://tokensale.snov.io/members/images/waves.svg', alt='WAVES')
                        .count 52,256,356
                        span.count_bottom WAVES
                #calculate.x_panel.calculate
                  .x_title
                    h2 {{ 'Calculate' | translate }}
                    ul.nav.navbar-right.panel_toolbox
                      li
                        a.collapse-link
                          i.fa.fa-chevron-up
                      li
                        a.close-link
                          i.fa.fa-close
                    .clearfix
                  .x_content
                    .calculator
                      .left
                        .form-group
                          h5 {{ 'Your buy' | translate }}
                          input#coin-amount.form-control(type='text' ng:model="model.youBuy" ng:change="changePrice()")
                          label {{ 'Snov tokens' | translate }}
                        a.direction(href='javascript:void(0)', data-direction='right')
                          i.fa.fa-arrow-right(aria-hidden='true')
                      .right
                        .form-group.is-empty
                          h5 {{ 'Your pay' | translate }}
                          input#coin-price.form-control(type='text' value='{{model.youPay}}' disabled='')
                          .btn-group
                            button.btn.btn-dark.dropdown-toggle(data-toggle='dropdown' type='button' aria-expanded='false')
                              a#calculator-currency-btn.btn-select.current-currency(data-code='{{model.currentRate.token}}') {{model.currentRate.fullname}}
                              span.caret
                            ul.dropdown-menu(role='menu')
                              li(ng:repeat="row in model.rates")
                                a.calculator-currency(data-code='{{row.token}}' ng:click="setCurrent(row)") {{row.fullname}}
                      .clearfix
                      .total
                        button.btn.btn-lg.btn-theme(ng:click="buy($event)" type='button', data-toggle='modal', data-target='.bs-buy-modal') {{ 'Buy now' | translate }}
                      .modal.fade.bs-buy-modal(tabindex='-1', role='dialog', aria-hidden='true')
                        .modal-dialog.modal-lg.text-left
                          .modal-content
                            .modal-header
                              button.close(type='button', data-dismiss='modal')
                                span(aria-hidden='true') ×
                              h4#myModalLabel.modal-title {{ 'Make a deposit' | translate }}
                            .modal-body
                              .col-md-4.col-sm-4.col-xs-12
                                .bs-wrap
                                  img(src='https://tokensale.snov.io/members/images/qr.jpg', alt='QR code')
                              .col-md-8.col-sm-8.col-xs-12
                                .bs-wrap
                                  h4
                                    strong l6atQTwZjeTP9TiUiVUwR3z0CBN7
                              .col-md-12.col-sm-12.col-xs-12
                                p.lead
                                  | {{ 'Please make sure your deposit equals or exceeds the minimum purchase amount (at the current exchange rate it is 0.012 BTC)' | translate }}
                              .clearfix
                .x_panel.transaction-history
                  .x_title
                    h2 {{ 'Your transaction history' | translate }}
                    ul.nav.navbar-right.panel_toolbox
                      li
                        a.collapse-link
                          i.fa.fa-chevron-up
                      li
                        a.close-link
                          i.fa.fa-close
                    .clearfix
                  .x_content
                    #datatable_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
                      table#datatable-checkbox.table.table-striped.bulk_action(role='grid', aria-describedby='datatable-checkbox_info')
                        thead
                          tr
                            th {{ 'Date' | translate }}
                            th {{ 'Transaction ID' | translate }}
                            th {{ 'Address Source' | translate }}
                            th {{ 'Snov assigned' | translate }}
                        tbody
                          tr(ng:repeat="row in model.transactions")
                            th(scope='row') {{row.date | date: 'dd/MM/yyyy hh:mm'}}
                            td
                              a(href='{{row.url}}') {{row.tx}}
                            td {{row.address}}
                            td {{row.assigned}}
              .col-md-3.col-sm-3.col-xs-12.sidebar
                .x_panel
                  .x_content.tile_count
                    .tile_stats_count
                      span.count_top {{ 'Token crowdsale pool:' | translate }}
                      .count {{model.progress.max | currency }}
                    hr
                    .tile_stats_count
                      span.count_top {{ 'Snov token price:' | translate }}
                      .count {{model.tokenPriceEth }} ETH
                  .item
                    table.table.bonuses
                      thead
                        tr
                          th(colspan='2')
                            h4 {{ 'Bonuses:' | translate }}
                      tbody
                        tr
                          td {{ 'First day' | translate }}
                          th.lead.text-right {{model.bonuses.firstDay}}%
                        tr
                          td {{ 'First week' | translate }}
                          th.lead.text-right {{model.bonuses.firstWeek}}%
                  hr
                  .item
                    table.table.personalinfo.no-border
                      tbody
                        tr
                          td {{ 'You contributed' | translate }}
                          th.lead.text-right {{model.you.contributedEth}} ETH
                        tr
                          td {{ 'Tokens you hold' | translate }}
                          th.lead.text-right {{model.you.tokensYouHold}}
                  a.btn.btn-block.btn-lg.btn-theme(href='index.html#calculate') {{ 'Buy now' | translate }}
                  hr
                  ul.list-inline.social-buttons
                    li
                      a(href='https://t.me/snovio_ico', alt='telegram', title='telegram', target='_blank')
                        i.fa.fa-paper-plane
                    li
                      a(href='https://www.reddit.com/user/Snovio_ICO/', alt='reddit', title='reddit', target='_blank')
                        i.fa.fa-reddit
                    li
                      a(href='https://medium.com/@ico_snovio', alt='medium', title='medium', target='_blank')
                        i.fa.fa-medium
                    li
                      a(href='https://bitcointalk.org/index.php?topic=2111272.0', alt='btc', title='btc', target='_blank')
                        i.fa.fa-btc
                    li
                      a(href='mailto', alt='mail', title='mail', target='_blank')
                        i.fa.fa-envelope
        // /page content
        // footer content
        footer
          .text-center {{ 'Copyright © Snov.io 2017' | translate }}
          .clearfix
